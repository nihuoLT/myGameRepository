<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#333333">
    <ViewFlipper 
        android:id="@+id/myfliper"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        >
        <RelativeLayout 
             android:layout_width="match_parent"
             android:layout_height="match_parent" 
            >
     <TextView 
        android:id="@+id/log_wd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:text="问答面板"
        android:textColor="#cccccc"
        android:textSize="35sp"
        />
    <com.example.newgame_1.NoScrollHorizontalViewPager
        android:id="@+id/ViewPagerLayout"
        android:layout_width="400dp"
        android:layout_height="240dp"
        android:background="@drawable/style_lay_1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:layout_centerVertical="true">
    </com.example.newgame_1.NoScrollHorizontalViewPager>
    <Button 
        android:id="@+id/theprevious"
        android:layout_width="90dp"
        android:layout_height="wrap_content" 
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/style_btna"
        android:layout_marginTop="62dp"
        android:layout_marginRight="115dp"
        android:padding="3dp"
        android:text="上一题"
        />
    <Button 
        android:id="@+id/thenext"
        android:layout_width="90dp"
        android:layout_height="wrap_content" 
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/style_btna"
        android:layout_marginTop="62dp"
        android:layout_marginRight="15dp"
        android:padding="3dp"
        android:text="下一题"
        />
    <Button 
        android:id="@+id/queren"
        android:layout_width="90dp"
        android:layout_height="wrap_content" 
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/style_btna"
        android:layout_marginTop="122dp"
        android:layout_marginRight="115dp"
        android:text="确定"
        />
    <Button 
        android:id="@+id/jieshu"
        android:layout_width="90dp"
        android:layout_height="wrap_content" 
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/style_btna"
        android:layout_marginTop="122dp"
        android:layout_marginRight="15dp"
        android:padding="3dp"
        android:text="结束"
        />
    <TextView 
        android:id="@+id/jieguo"
        android:layout_width="195dp"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="182dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/style_lay_1"
        android:textColor="#cccccc"
        android:textSize="10sp"
        android:padding="6dp"
        />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="结果分析"
                android:textColor="#cccccc"
                android:textSize="40sp"
            />
            <RatingBar 
                android:id="@+id/ratingBar"
                android:numStars="5" 
                android:isIndicator="true"
                android:max="1"
                android:rating="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_centerHorizontal="true"
                android:stepSize="0.001"
                android:layout_marginTop="80dp"
                />
            <TextView 
                android:id="@+id/allnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_centerHorizontal="true"
                android:layout_marginTop="130dp"
                android:textSize="24sp"
                android:textColor="#999999"
                />
            <TextView 
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_centerHorizontal="true"
                android:layout_marginTop="180dp"
                android:textSize="18sp"
                android:textColor="#999999"
                />
            <Button 
                android:id="@+id/lookjiehuo"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/style_btna"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="230dp"
                android:text="错误题号"
                android:padding="5dp"
                />
            <Button 
                android:id="@+id/fliperback"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/style_btna"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp"
                android:text="返回"
                />
        </RelativeLayout>
    </ViewFlipper>
    
</RelativeLayout>
